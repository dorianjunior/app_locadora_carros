# ========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ========================================
# IMPORTANTE:
# 1. Gere APP_KEY com: php artisan key:generate
# 2. Gere JWT_SECRET com: php artisan jwt:secret
# 3. Altere todas as senhas para valores seguros
# 4. Configure o APP_URL com seu domínio real
# 5. Configure certificado SSL/HTTPS
# ========================================

APP_NAME="App Locadora Carros"
APP_ENV=production
APP_KEY=                                    # GERAR: php artisan key:generate
APP_DEBUG=false                             # NUNCA true em produção!
APP_URL=https://seudominio.com.br          # Altere para seu domínio com HTTPS

LOG_CHANNEL=stack
LOG_LEVEL=error                            # Produção: error, warning ou info (não debug)

# ========================================
# BANCO DE DADOS
# ========================================
# ATENÇÃO: Use senhas fortes e únicas!
# Exemplo de senha forte: gere com: openssl rand -base64 32
# ========================================

DB_CONNECTION=mysql
DB_HOST=mysql                              # Para Docker: mysql | Para servidor: localhost ou IP
DB_PORT=3306
DB_DATABASE=app_locadora_carros
DB_USERNAME=root
DB_PASSWORD=SuaSenhaSeguraAqui123!        # ALTERAR para senha forte!

# ========================================
# CACHE, SESSÕES E FILAS
# ========================================

BROADCAST_DRIVER=log
CACHE_DRIVER=redis                         # Para performance: redis | Alternativa: file
QUEUE_CONNECTION=redis                     # Para processamento assíncrono
SESSION_DRIVER=redis                       # Para múltiplos servidores: redis | Single server: file
SESSION_LIFETIME=120                       # Tempo em minutos (120 = 2 horas)

MEMCACHED_HOST=127.0.0.1

# ========================================
# REDIS
# ========================================
# ATENÇÃO: Configure senha em produção!
# ========================================

REDIS_HOST=redis                           # Para Docker: redis | Para servidor: 127.0.0.1
REDIS_PASSWORD=SuaSenhaRedisForte456!     # ALTERAR para senha forte!
REDIS_PORT=6379

# ========================================
# JWT (Autenticação)
# ========================================
# GERAR com: php artisan jwt:secret
# ========================================

JWT_SECRET=                                # GERAR: php artisan jwt:secret
JWT_TTL=60                                 # Tempo de vida do token em minutos
JWT_REFRESH_TTL=20160                      # Tempo de vida do refresh token (14 dias)

# ========================================
# EMAIL (SMTP)
# ========================================
# Configure com seu provedor de email real
# Exemplos: Gmail, SendGrid, Mailgun, Amazon SES
# ========================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com                   # Alterar para seu provedor
MAIL_PORT=587                              # 587 (TLS) ou 465 (SSL)
MAIL_USERNAME=seu-email@gmail.com          # ALTERAR
MAIL_PASSWORD=sua-senha-app-gmail          # ALTERAR (use App Password para Gmail)
MAIL_ENCRYPTION=tls                        # tls ou ssl
MAIL_FROM_ADDRESS=noreply@seudominio.com   # ALTERAR
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# AWS (Se usar S3 para armazenamento)
# ========================================
# Deixe em branco se não usar AWS
# ========================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# ========================================
# PUSHER (Se usar WebSockets)
# ========================================
# Deixe em branco se não usar Pusher
# ========================================

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ========================================
# SEGURANÇA ADICIONAL
# ========================================

# Force HTTPS em produção
FORCE_HTTPS=true

# CORS - Domínios permitidos (separados por vírgula)
SANCTUM_STATEFUL_DOMAINS=seudominio.com.br

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
